{
    "bugs": "https://github.com/tseijp/use-grid/issues/",
    "homepage": "https://tseijp.github.io/use-grid/",
    "repository": "https://github.com/tseijp/use-grid/",
    "description": "ü§è use-grid is a hook to build responsive layouts of all shapes and sizes.",
    "keywords": [
        "hooks",
        "react",
        "media",
        "query",
        "view",
        "grid"
    ],
    "name": "@use-grid/root",
    "author": "tsei",
    "license": "MIT",
    "private": true,
    "maintainers": ["tseijp (https://github.com/tseijp)"],
    "workspaces": ["packages/*", "examples/*"],
    "scripts": {
        "start": "lerna exec --scope @use-grid/docs -- yarn start",
        "build": "lerna exec --scope @use-grid/docs -- yarn build",
        "deploy": "lerna exec --scope @use-grid/docs -- yarn deploy",
        "update": "lerna exec --scope use-grid -- yarn publish",
        "rollup": "lerna exec --scope use-grid -- rollup -c",
        "watch": "lerna exec --scope use-grid -- jest --watch --runInBand",
        "cov": "lerna exec --scope use-grid -- jest --coverage",
        "ls": "lerna exec --scope use-grid -- npm pack --dry-run"
    },
    "devDependencies": {
        "lerna": "^4.0.0"
    }
}
