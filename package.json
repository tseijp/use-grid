{
    "name": "@use-grid/root",
    "author": "tsei",
    "license": "MIT",
    "private": true,
    "description": "ü§è use-grid is a hook to build responsive layouts of all shapes and sizes.",
    "repository": "tseijp/use-grid",
    "homepage": "https://tseijp.github.io/use-grid",
    "maintainers": ["tseijp (https://github.com/tseijp)"],
    "workspaces": ["packages/*", "examples/*"],
    "scripts": {
        "init": "npm i -g yarn lerna && lerna bootstrap",
        "docs": "lerna exec --scope @use-grid/docs -- yarn start",
        "site": "lerna exec --scope @use-grid/site -- yarn start",
        "update": "lerna exec --scope use-grid -- yarn publish",
        "build": "lerna exec --scope use-grid -- rollup -c",
        "watch": "lerna exec --scope use-grid -- jest --watch --runInBand",
        "cov": "lerna exec --scope use-grid -- jest --coverage",
        "ls": "lerna exec --scope use-grid -- npm pack --dry-run"
    },
    "devDependencies": {
        "lerna": "^4.0.0"
    }
}
